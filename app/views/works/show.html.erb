<section class="section site-portfolio">
<div class="container">
  <h5>Movie data</h5><br>
  <h2><%= @work.Title %></h2>
  <div>Release: <%=@work.ReleaseYear%></div>
  <div>Starring: <%=@work.Starring %></h5></div><br>
</div>

<div class="container" data-aos="fade-up">
  <div class="row" id="portfolio-grid">
    <div class='col-8 mb-4'>
      <% if @work.image_url %>
        <%= image_tag @work.image_url, class: 'img-fluid' %>
      <% else %>
        <img src='/img/img_5.jpg', class='img-fluid'>
      <% end %>
    </div>
    <div class='col-4'>
      <div class="row mb-3 align-items-center"><%= @work.Description %></div>
      <div class="row align-items-center">Director:</div>
      <div class="row mb-3 align-items-center"><%= link_to @work.director.Director, director_path(@work.director_id) %></div>
    </div>
  </div>

  <%= link_to 'Edit', edit_work_path, class: 'btn btn-outline-info mr-2'%>
  <%= link_to 'Delete', work_path(@work), method: :delete, data: {confirm: 'sure?'}, class: 'btn btn-outline-dark' %><br>
  <%= link_to 'Back', works_path, class: 'btn btn-primary mt-3' %>
  
</div>
</section>