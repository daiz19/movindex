<section class="section site-portfolio">
<div class="container">
  <h5>Movie data</h5><br>
  <h2><%= @work.Title %></h2>
  <div>Release: <%=@work.ReleaseYear%></div>
  <div>Starring: <%=@work.Starring %></h5></div><br>
</div>

<div class="container" data-aos="fade-up">
  <div class="row" id="portfolio-grid">
    <div class='col-8 mb-4'>
      <% if @work.image_url %>
        <%= image_tag @work.image_url, class: 'img-fluid' %>
      <% else %>
        <img src='/img/img_5.jpg'>
      <% end %>
    </div>
    <div class='col-4'>
      <div class="row mb-3 align-items-center"><%= @work.Description %></div>
      <div class="row align-items-center">Director:</div>
      <div class="row mb-3 align-items-center"><%= link_to @work.director.Director, director_path(@work.director_id) %></div>
    </div>
  </div>

  <div class='row mb-5'>
    <div class='col-2'><%= link_to 'Edit', edit_work_path, class: 'btn btn-outline-info'%></div>
    <div class='col-2'><%= link_to 'Delete', work_path(@work), method: :delete, data: {confirm: 'sure?'}, class: 'btn btn-outline-dark' %></div>
  </div>
  <div class='row'>
    <div class='col'><%= link_to 'Back', works_path, class: 'btn btn-primary' %></div>
  </div>
</div>
</section>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Dirctor</th>
        <th>Year</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= link_to @work.Title, edit_work_path %>
        </td>
        <td>
          <%= link_to @work.director.Director, edit_director_path(@work.director_id) %>
        </td>
        <td>
          <%= @work.ReleaseYear %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class='col'><%= link_to 'Add movie', new_work_path, class: 'btn btn-primary' %></div>
<div class='col'><%= link_to 'Add director', new_director_path, class: 'btn btn-success' %></div>
